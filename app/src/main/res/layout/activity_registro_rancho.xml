<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/surface"
    android:orientation="vertical"
    tools:context=".RegistroRanchoActivity">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="30dp"
            android:layout_marginBottom="30dp"
            android:layout_marginLeft="30dp"
            android:layout_marginRight="30dp"
            android:text="@string/registra_tu_rancho"
            android:textColor="@color/white"
            android:background="@drawable/text_view_titulos_background"
            android:textSize="32dp"
            android:textStyle="bold"
            android:shadowColor="@color/black"
            android:shadowDx="2"
            android:shadowDy="1"
            android:shadowRadius="1"
            android:textAlignment="center"
            android:padding="10dp"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@drawable/linear_layout_registro_rancho_background">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="20dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginBottom="20dp"
                    android:text="@string/nombre"
                    android:textColor="@color/white"
                    android:textSize="16dp"
                    android:textStyle="bold"
                    android:shadowColor="@color/black"
                    android:shadowDx="2"
                    android:shadowDy="1"
                    android:shadowRadius="1"/>

                <EditText
                    android:id="@+id/et_nombre_registro_rancho"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="30dp"
                    android:maxLines="1"
                    android:maxLength="50"
                    android:layout_marginBottom="20dp"
                    android:textColor="@color/black"
                    android:background="@drawable/edit_text_background" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="20dp"
                    android:layout_marginBottom="20dp"
                    android:text="@string/ubicacion"
                    android:textColor="@color/white"
                    android:textSize="16dp"
                    android:textStyle="bold"
                    android:shadowColor="@color/black"
                    android:shadowDx="2"
                    android:shadowDy="1"
                    android:shadowRadius="1"/>
                <EditText
                    android:id="@+id/et_ubicacion"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="30dp"
                    android:layout_marginBottom="20dp"
                    android:maxLines="1"
                    android:maxLength="50"
                    android:textColor="@color/black"
                    android:background="@drawable/edit_text_background"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="20dp"
                    android:layout_marginBottom="20dp"
                    android:text="@string/telefono"
                    android:textColor="@color/white"
                    android:textSize="16dp"
                    android:textStyle="bold"
                    android:shadowColor="@color/black"
                    android:shadowDx="2"
                    android:shadowDy="1"
                    android:shadowRadius="1"/>
                <EditText
                    android:id="@+id/et_telefono"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="30dp"
                    android:layout_marginBottom="20dp"
                    android:textColor="@color/black"
                    android:inputType="phone"
                    android:maxLength="10"
                    android:maxLines="1"
                    android:background="@drawable/edit_text_background"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="20dp"
                    android:layout_marginBottom="20dp"
                    android:text="@string/provincia"
                    android:textColor="@color/white"
                    android:textSize="16dp"
                    android:textStyle="bold"
                    android:shadowColor="@color/black"
                    android:shadowDx="2"
                    android:shadowDy="1"
                    android:shadowRadius="1"/>
                <EditText
                    android:id="@+id/et_provincia"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="30dp"
                    android:layout_marginBottom="20dp"
                    android:textColor="@color/black"
                    android:maxLines="1"
                    android:maxLength="50"
                    android:background="@drawable/edit_text_background"/>

        </LinearLayout>

        <Button
            android:id="@+id/bt_registrar_rancho"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_gravity="center"
            android:backgroundTint="@color/accent"
            android:text="@string/registrar_rancho"
            android:textStyle="bold"
            android:textSize="16dp"
            android:shadowColor="@color/white"
            android:shadowDx="2"
            android:shadowDy="1"
            android:shadowRadius="1"
            android:textColor="@color/black"/>

        <ImageView
            android:layout_width="580px"
            android:layout_height="150dp"
            android:layout_gravity="center"
            android:background="@drawable/img_registro_rancho" />

        <ImageButton
            android:id="@+id/bt_regresar_registro_rancho"
            android:layout_width="39dp"
            android:layout_height="37dp"
            android:layout_marginLeft="10dp"
            android:background="@drawable/boton_regresar_modificar_rancho"
            android:src="@drawable/arrow_left_bold" />

</LinearLayout>